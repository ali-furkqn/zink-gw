    "compilerOptions": {
        "module": "CommonJS",
        "declaration": true,
        "removeComments": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES2020",
        "sourceMap": true,
        "outDir": "./dist",
        "baseUrl": "src/",
        "typeRoots": ["node_modules/@types", "src/@types"],
        "incremental": true
    }
